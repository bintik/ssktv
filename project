int main()
{
    setlocale (LC_ALL, "Russian");
	system ("color 2");
	cout << "       ---------------------------------------------------------------";
	cout << "\n      **********-!СУПЕР СОВРЕМЕННЫЙ КАЛЬКУЛЯТОР ТВОЕЙ МЕЧТЫ!-**********\n";
    cout << "       ---------------------------------------------------------------";
	while (!done)                     //мой цикл
                                      
    {
        done = ShowMenu();
    }

    return 0;
}

bool ShowMenu()
{
    short menu;
    cout << "\n";
    cout << "1. Сумма\n2. Разность\n3. Умножение\n4. Деление\n5. Квадратный корень\n";
	cout << "6. Корень в степени\n7. Вовзедение в степень\n8. Выход\n\n";
	cout << "Ââåäèòå ÷èñëî ñîîòâåòñâóùåé îïåðàöèè = ";
    cin >> menu;
    if (menu == 1)
        Sum();
    else if (menu == 2)
        Sub();
    else if (menu == 3)
        Mul();
    else if (menu == 4)
        Div();
    else if (menu == 5)
        Sqrt();
    else if (menu == 6)
        Radical();
    else if (menu == 7)
        Power();
    else if (menu == 8)
        return true;
    else
        Error();

    return false;
}

void Error()
{
    cout << "Âû íåïðàâèëüíî ââåëè çíà÷åíèå! Äàâàé-êà åùå ðàçîê :)\n";
}

void Sum()
{
    system ("cls");
	int number;
    cout << "Ââåäèòå êîë-âî ñëàãàåìûõ: ";
    cin >> number;
    double * s = new double [number];
    double answer = 0;
    for (int i = 0; i < number; i++)
    {
        cout << "Ââåäèòå " << i + 1 << " ñëàãàåìîå: ";
        cin >> s[i];
        answer += s[i];
    }
    system ("cls");
	for (int i = 0; i < number - 1; i++)
        cout << setprecision(8) << s[i] << " + ";
       
    cout << setprecision(8) << s[number - 1] << " = " << setprecision(8) << answer << endl;
    delete[]s;
    
}

void Sub()
{
    system ("cls");
	double a, b;
    cout << "Ââåäèòå óìåíüøàåìîå: ";
    cin >> a;
    cout << "Ââåäèòå âû÷èòàåìîå: ";
    cin >> b;
    system ("cls");
    cout << a << " - " << b << " = " << setprecision(8) << a - b << endl;
} 

void Mul()
{
    system ("cls");
	int number;
    cout << "Ââåäèòå êîë-âî ìíîæèòåëåé: ";
    cin >> number;
    double * s = new double [number];
    double answer = 1;
    for (int i = 0; i < number; i++)
    {
        cout << "Ââåäèòå " << i + 1 << " ìíîæèòåëü: ";
        cin >> s[i];
        answer *= s[i];
    }
    system ("cls");
	for (int i = 0; i < number - 1; i++)
        cout << setprecision(8) << s[i] << " * ";
    cout << setprecision(8) << s[number - 1] << " = " << setprecision(8) << answer << endl;
    delete[]s;
}

void Div()
{
    system ("cls");
	double a, b;
    cout << "Ââåäèòå äåëèìîå: ";
    cin >> a;
    cout << "Ââåäèòå äåëèòåëü: ";
    cin >> b;
    system ("cls");
	cout << a << " / " << b << " = " << setprecision(8) << a / b << endl;
}

void Sqrt()
{
    system ("cls");
	double a;
    cout << "Ââåäèòå ÷èñëî, èç êîòîðîãî íóæíî èçâëå÷ü êâàäðàòíûé êîðåíü: ";
    cin >> a;
    system ("cls");
	cout << "sqrt(" << a << ") = " << sqrt (a) << endl;
}

void Radical()
{
    system ("cls");
	double a, b;
    cout << "Ââåäèòå ÷èñëî, èç êîòðîãî íóæíî èçâåë÷ü êîðåíü: ";
    cin >> a;
    cout << "Êîðåíü êàêîé ñòåïåíè íóæíî èçâëå÷ü? ";
    cin >> b;
    system ("cls");
	cout << "Êîðåíü " << b << " ñòåïåíè èç ÷èñëà " << a << " ðàâåí " << pow (a, 1 / b) << endl;
}

void Power()
{
    system ("cls");
	double a, b;
    cout << "Ââåäèòå îñíîâàòåëü ñòåïåíè: ";
    cin >> a;
    cout << "Ââåäèòå ïîêàçàòåëü ñòåïåíè: ";
    cin >> b;
    system ("cls");
	cout << a << "^" << b << " = " << pow (a, b) << endl;
}
